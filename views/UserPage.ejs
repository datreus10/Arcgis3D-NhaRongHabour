<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=no" />
    <title>Bến Nhà Rồng</title>
    <link rel = "icon" href = "/image/logo.png" type = "image/x-icon">
    <style>
        html,
        body,
        #viewDiv {
            padding: 0;
            margin: 0;
            height: 97%;
            width: 100%;
        }

        #back {
            position: absolute;
            bottom: 20px;
        }

        h1 {
            text-align: center;
        }

        #back i {
            background-image: url(app/public/img/back.svg);
            background-repeat: no-repeat;
            display: inline-block;
            width: 100px;
            height: 25px;
            padding-left: 25px;
            padding-top: 2px;
            margin: 10px;
            cursor: pointer;
            background-size: 20px;
        }
    </style>

    <link rel="stylesheet" href="https://js.arcgis.com/4.16/esri/themes/light/main.css" />
    <script src="https://js.arcgis.com/4.16/"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:500&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <script>
        require([
            "esri/Map",
            "esri/views/SceneView",
            "esri/layers/GeoJSONLayer",
            "esri/layers/SceneLayer",
            "esri/layers/GraphicsLayer",
            "esri/Graphic",
            "esri/request",
        ], function (
            Map,
            SceneView,
            GeoJSONLayer,
            SceneLayer,
            GraphicsLayer,
            Graphic,
            esriRequest
        ) {

            const map = new Map({
                basemap: "topo-vector",
                ground: "world-elevation",
            });

            const view = new SceneView({
                container: "viewDiv",
                map: map,
                camera: {
                    position: [106.70680940151215, 10.766974818494525, 100],
                    heading: 0,
                    tilt: 60,
                },
            });

            const generateLayer = (data) => {
                const blob = new Blob([JSON.stringify(data.content)], {
                    type: "application/json"
                });
                const url = URL.createObjectURL(blob);
                const geojsonLayer = new GeoJSONLayer({
                    url: url,
                });
                geojsonLayer.renderer = data.renderer
                return geojsonLayer;
            }

            esriRequest('http://localhost:3000/data/floor').then(function (response) {
                map.add(generateLayer(response.data))
            });

            esriRequest('http://localhost:3000/data/column').then(function (response) {
                map.add(generateLayer(response.data))
            });

            esriRequest('http://localhost:3000/data/fence').then(function (response) {
                response.data.forEach(e => {
                    map.add(generateLayer(e[0]))
                    map.add(generateLayer(e[1]))
                })
            });
            esriRequest('http://localhost:3000/data/wall').then(function (response) {
                map.add(generateLayer(response.data))
            });
            esriRequest('http://localhost:3000/data/roof').then(function (response) {
                response.data.forEach(e => {
                    map.add(generateLayer(e[0]))
                    map.add(generateLayer(e[1]))
                })
            });
            esriRequest('http://localhost:3000/data/step').then(function (response) {
                map.add(generateLayer(response.data))
            });

            esriRequest('http://localhost:3000/data/circular_decoration').then(function (response) {
                map.add(generateLayer(response.data))
            });
            esriRequest('http://localhost:3000/data/columndecoration').then(function (response) {
                map.add(generateLayer(response.data))
            });
            esriRequest('http://localhost:3000/data/floordecoration').then(function (response) {
                map.add(generateLayer(response.data))
            });
            esriRequest('http://localhost:3000/data/floorbrick').then(function (response) {
                map.add(generateLayer(response.data))
            });
            esriRequest('http://localhost:3000/data/roofbrick').then(function (response) {
                map.add(generateLayer(response.data))
            });

            esriRequest('http://localhost:3000/data/door').then(function (response) {
                map.add(generateLayer(response.data))
            });
            view.popup.defaultPopupTemplateEnabled = true;
        });
    </script>

</head>

<body>
    <header>
        <a class="logo" href="/">
            <img src="/image/logo.png" alt="logo">
            <span class="logo-name">BẾN NHÀ RỒNG</span>
        </a>
        <nav>
            <ul class="nav__links">
                <li><a href="/user">Tham quan</a></li>
                <li><a href="/about">Về chúng tôi</a></li>
            </ul>
        </nav>
        <%if (username=="") {%>
        <a class="cta" href="/login" onclick="document.getElementById('login-form').style.display='block'"
            style="width: auto">
            Đăng nhập
        </a>
        <% }else if (username=="admin"){ %>
        <a class="cta" href="/admin">
            <%=username%>
        </a>
        <%}%>
        <p class="menu cta">Menu</p>
    </header>
    <div id="viewDiv"></div>
</body>

</html>