<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=0.1" />
    <title>Bến Nhà Rồng</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <!-- <link rel="stylesheet" href="Admin-asset/admin_product.css" /> -->
    <link rel="stylesheet" href="/css/admin_home.css" />
    <link rel = "icon" href = "/image/logo.png" type = "image/x-icon">
</head>

<body>
    <div class="container">
        <!-- Navigation -->
        <div class="navigation">
            <ul>
                <li>
                    <a href="/admin">
                        <span class="icon"><i class="fas fa-users-cog" aria-hidden="true"></i
                            ></span>
                        <span class="title">
                                <h2>ADMIN</h2>
                            </span>
                    </a>
                </li>

                <br /><br />

                <li>
                    <a href="/admin">
                        <span class="icon"><i class="fas fa-home" aria-hidden="true"></i></span>
                        <span class="title">Thêm cột</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/admin_circulation">
                        <span class="icon"><i class="fas fa-archway"></i></span>
                        <span class="title">Thêm tt hình tròn</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/admin_fence">
                        <span class="icon"><i class="fas fa-dungeon"></i></span>
                        <span class="title">Thêm hàng rào</span>
                    </a>
                </li>
                <li>
                    <a class="isActive" href="/admin/admin_update">
                        <span class="icon"><i class="fas fa-folder-minus"></i></span>
                        <span class="title">Xóa, sửa BNR</span>
                    </a>
                </li>
        </div>

        <div class="main">
            <!-- Toggle starts -->
            <div class="topbar">
                <div class="toggle" onclick="toggleMenu();"></div>
                <div class="search">
                    <label>
                            <input type="text" placeholder="Search here" />
                            <i class="fas fa-search" aria-hidden="true"></i>
                        </label>
                </div>
                <div class="btns">
                    <button class="btn-logout"><a href="/logout">Đăng xuất</a></button>
                    <button class="btn-back"><i class="fas fa-sign-out-alt icon-log"></i><a href="/user">Về trang chủ</a></button>
                </div>
            </div>
            <!-- Toggle ends -->

            <!-- Form columns -->
            <div class="details">
                <div class="productInfo">
                    <div class="Info-details">
                        <div class="cardHeader">
                            <h2 class="title">Chỉnh sửa Bến Nhà Rồng</h2>
                        </div>
                        <form action="/data/searchitemupdate" method="post" name="createcirculation">
                            <div class="select-parent">
                                <!-- Chọn địa điểm -->
                                <div class="select parent">
                                    <select name="body" id="format">
                                            <option selected disabled>Chọn địa điểm</option>
                                            <% bodies.forEach(body => { %>
                                            <option value="<%=body.id%>"><%=body.Name%></option>
                                            <% }) %>
                                        </select>
                                </div>
                                <!-- Chọn bảng tính -->
                                <div class="select child1">
                                    <select name="type" id="format1">
                                            <option selected disabled>Chọn bảng tính</option>
                                            <option value="Floor">Nền</option>
                                            <option value="Steps">Bậc thềm</option>
                                            <option value="Column">Cột</option>
                                            <option value="Door">Cửa</option>
                                            <option value="Roof_Brick">Lót mái</option>
                                            <option value="Floor_Brick">Lót nền</option>
                                            <option value="Roof">Mái</option>
                                            <option value="Wall">Tường</option>
                                            <option value="Floor_Decoration">Trang trí nền</option>
                                            <option value="Column_Decoration">Trang trí cột</option>
                                            <option value="Roof_Decoration">Trang trí mái</option>
                                            <option value="Circular_Decoration">Trang trí hình tròn</option>
                                            <option value="Fence">Trang trí hàng rào</option>
                                        </select>
                                </div>
                            </div>
                            <div class="button">
                                <input type="submit" value="Tìm kiếm" />
                            </div>

                        </form>
                    </div>
                </div>
                <div class="productResult">
                    <h2 class="title">Kết quả</h2>
                    <iframe src="/user" title="Bến Nhà Rồng" class="result"></iframe>
                </div>
            </div>
            <!-- Form columns -->
        </div>
    </div>
    <script>
        function toggleMenu() {
            let toggle = document.querySelector(".toggle");
            let navigation = document.querySelector(".navigation");
            let main = document.querySelector(".main");
            toggle.classList.toggle("active");
            navigation.classList.toggle("active");
            main.classList.toggle("active");
        }
        let details_column = document.querySelector(".select.child.detail_column");
        // details_column.style.display = "flex";
    </script>
</body>

</html>